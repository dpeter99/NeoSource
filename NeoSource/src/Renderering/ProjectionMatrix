package Renderering

import Math

//for making bot projection matrixes
open class ProjectionMatrix
{
    val near: Float
    val far: Float

    val top: Float
    val bottom: Float

    val left: Float
    val right: Float

    val angle: Float


    val matrix: Matrixf;

    constructor()
    {
        matrix = Matrixf(
                arrayOf(
                        arrayOf(2 / (right-left),0,0,-(right+left)/(right-left)),
                        arrayOf(0,2 / (right-left),0,-(top+bottom)/(top-bottom)),
                        arrayOf(0,0,2 / (right-left),-(far+near)/(far-near)),
                        arrayOf(0,0,0,1)
                )
        )
    }
}